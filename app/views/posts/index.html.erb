<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= post.up_votes_count %>
          <%- if current_user.voted?(post) %>
            up
          <% else %>
            <%= link_to "up", vote_up_post_path(post), method: "post" %>
          <% end %>
        </td>
        <td>
          <%= post.down_votes_count %>
          <%- if current_user.voted?(post) %>
            down
          <% else %>
            <%= link_to "down", vote_down_post_path(post), method: "post" %>
          <% end %>
        </td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user.email %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
